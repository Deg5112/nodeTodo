<div ng-controller="taskController as tC">
    <h1>Make a task</h1>

    <input class="form-control" type="text" name="task_title" ng-model="tC.task.title"><br/>

    <textarea class="form-control" row="4" ng-model="tC.task.body"></textarea>
    <button type="button" class='btn btn-success' ng-click="tC.createTask()">Create</button>
    <ul id="task-list">
        <li class="task-item" ng-repeat="item in tC.list">
            <h3 class="text-center">\{{item.title}}</h3>
            <p class="text-center">\{{item.body}}</p>
        </li>
    </ul>
</div>
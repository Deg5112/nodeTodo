<div class="row">
    <div class="col s12 m10 offset-m1 l8 offset-l2">
        <h3 class="header teal-text text-lighten-1">Update List</h3>
    </div>
</div>

<form method="post" action="/saveList/{{listItem._id}}">
    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2">
            <div class="input-field">
                <label>List Title</label>
                <input type="text" class="validate" placeholder="Name" name="title" value="{{listItem.listTitle}}">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2">
            <button type="submit" class="btn col s12" data-placeholder="">Submit</button>
        </div>
    </div>
</form>
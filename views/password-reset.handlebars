<div ng-controller="signInController as sC">
    <form method="post" action="/users/resetPasswordSuccess/{{userId}}" class="col s12">

        <div class="row">
            <div class="col s12 m10 offset-m1 l6 offset-l3">
                <h3 class="header teal-text text-lighten-1">Reset Password</h3>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12 m10 offset-m1 l6 offset-l3">
                <input id="password" type="password" name="password" class="validate">
                <label for="password">Password</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m10 offset-m1 l6 offset-l3">
                <input id="confirm-password" type="password" name="password2" class="validate">
                <label for="confirm-password">Confirm Password</label>
            </div>
        </div>


        <div class="row">
            <div class="col s12 m10 offset-m1 l6 offset-l3">
                <button type="submit" class="waves-effect waves-light btn col s12">Submit</button>
            </div>
        </div>


    </form>

</div>
<div class="row">
    <div class="col s12 m10 offset-m1 l8 offset-l2">
        <h3 class="header teal-text text-lighten-1">Update Todo</h3>
    </div>
</div>
<form method="post" action="/saveTodo/{{todo._id}}/{{todo.list_id}}">
    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2">
            <div class="input-field">
                <input id="todo-title" type="text" class="form-control" placeholder="Name" name="todo-title" value="{{todo.title}}">
                <label for="todo-title">Todo title</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2">
             <button type="submit" class="btn col s12" data-placeholder="">Submit</button>
        </div>
    </div>
</form>
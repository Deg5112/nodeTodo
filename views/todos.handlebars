<div ng-controller="todoController as tC">
    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2" ng-cloak>
             <h3 class="header teal-text text-lighten-1">{{listTitle}} List</h3>  <!--should end up saying "List Todos"-->
        </div>
    </div>
    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2">
            <div class="input-group">
               <input type="text" class="form-control" name="" ng-model="tC.todoItem.title">
               <span class="input-group-btn">
                    <button class="btn waves-effect waves-light col s12" type="button" ng-click="tC.createTodo('{{listId}}')">Create</button>
               </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2" ng-repeat="item in tC.todos" ng-cloak>
                <!--ng cloack that shit below anddd add the listItem id upon ajax success of creation of list item-->
            <ul class="collection">
                <div style="position:relative;" ng-repeat="item in lC.list">
                    <a  class="collection-item avatar" href="/todo-overview/\{{item._id}}">
                        <i class="material-icons circle">view_list</i>
                        <span class="">
                            <h5>
                            <!--<i class="fa fa-list-ul" aria-hidden="true"></i>-->
                                \{{item.listTitle}}
                                </h5>
                        </span>
                        <p>

                        </p>

                        <!--might have to use location service to change route-->

                    </a>

                    <a href=/updateList/\{{item._id}}" class="list-update"><i class="material-icons">edit</i></a>
                    <i ng-click="lC.deleteList(item._id, $index)"  class="material-icons list-delete">delete</i>
                </div>
            </ul>

        </div>
    </div>
</div>